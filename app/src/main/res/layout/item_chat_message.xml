<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_message_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="left"
    android:gravity="left|bottom"
    android:layout_margin="2dp">

    <LinearLayout
        android:id="@+id/ll_item_message_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:background="@drawable/back_item_message">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="start">

            <TextView
                android:id="@+id/tv_chat_username"
                style="?android:textAppearanceMedium"
                android:textColor="@color/colorUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="name"/>

            <TextView
                android:id="@+id/tv_chat_date"
                style="?android:textAppearanceMedium"
                android:textColor="@color/colorDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:gravity="end"
                android:textSize="12sp"
                android:layout_marginLeft="6dp"
                android:text="00:00"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_chat_message"
            style="?android:textAppearanceMedium"
            android:textColor="@color/colorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="m"/>

    </LinearLayout>

</LinearLayout>